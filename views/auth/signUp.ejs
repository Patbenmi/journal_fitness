<h1>Sign-Up</h1>

<form action="/auth/signup" method="POST">
  <label for="new-name_first">First Name</label>
  <input type="text" name="name_first" id="new-name_first">
  <label for="new-name_last">Last Name</label>
  <input type="text" name="name_last" id="new-name_last">

  <label for="new-gender">Gender:</label>
  <label for="new-male">Male</label>
  <input type="radio" name="gender" value="Male"id="new-male">
  <label for="new-nonbinary">Non-Binary</label>
  <input type="radio" name="gender" value="Non-Binary" id="new-nonbinary">
  <label for="new-female">Female</label>
  <input type="radio" name="gender" value="Female" id="new-female">

  <label for="new-language">Language:</label>
  <label for="new-english">English</label>
  <input type="radio" name="language" value="English" id="new-english">
  <label for="new-german">Deutsch</label>
  <input type="radio" name="language" value="Deutsch" id="new-german">

  <label for="new-language">Email Address</label>
  <input type="email" name="email" for="new-email">

  <label for="new-password">Password</label>
  <input type="password" name="password" for="new-password">

  <input type="submit" value="Sign Up">
</form>